<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.winsun.fruitmix">

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/launcher_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/CustomAppTheme">

        <!-- android:theme="@style/Theme.AppCompat.Light.NoActionBar" -->

        <activity
            android:name=".ui.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AlbumContentActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CreateAlbumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CreateUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.EditPhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.EquipmentSearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".ui.MainPageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ModifyAlbumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MoreMediaActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.OriginalMediaActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ui.UserManageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mediaModule.MediaShareCommentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PersonInfoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".GalleryTestActivity" />
        <activity
            android:name=".fileModule.LocalFileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateNewEquipmentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.NewPhotoSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SettingActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.AccountMangeActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>