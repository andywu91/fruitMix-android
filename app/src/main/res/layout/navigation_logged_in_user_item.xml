<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/logged_in_user_item_layout"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/share_portrait_bg"
        android:gravity="center"
        android:text="@string/user_name_abbreviations"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JACK YANG"
            android:textColor="#DE000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/item_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在WISNUC Home上"
            android:textColor="#8A000000"
            android:textSize="12dp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>