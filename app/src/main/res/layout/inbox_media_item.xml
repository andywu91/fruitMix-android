<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="groupUserComment"
            type="com.winsun.fruitmix.inbox.data.model.GroupUserComment" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/inbox_comment_title"
            layout="@layout/inbox_comment_title"
            app:groupUserComment="@{groupUserComment}" />

        <FrameLayout
            android:id="@+id/viewpager_layout"
            android:layout_width="match_parent"
            android:layout_height="166dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/media_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/media_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_black_bg"
                android:text="1/4"
                android:textColor="@color/eighty_seven_percent_white"
                android:textSize="12dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/circle_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ci_drawable="@drawable/viewpager_indicator_select_item_bg"
                app:ci_drawable_unselected="@drawable/viewpager_indicator_unselect_item_bg"
                app:ci_height="5dp"
                app:ci_margin="8dp"
                app:ci_width="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/show_all"
                android:textColor="#03a9f4"
                android:textSize="12dp" />


        </FrameLayout>


    </LinearLayout>

</layout>
