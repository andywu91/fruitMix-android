<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="privateGroup"
            type="com.winsun.fruitmix.group.data.model.PrivateGroup" />

        <import type="android.view.View" />

    </data>

    <RelativeLayout
        android:id="@+id/group_list_item_root_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:clickable="@{privateGroup.isStationOnline()}">

        <com.szysky.customize.siv.SImageView
            android:id="@+id/user_icon_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/user_icon_view"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/group_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/right_layout"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{privateGroup.getNameWithHandleEmptyName(context),default=大学同学}"
                    android:textColor="@color/eighty_seven_percent_black"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/right_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="@string/station_offline"
                        android:textSize="12dp"
                        android:visibility="@{privateGroup.isStationOnline()?View.INVISIBLE:View.VISIBLE}" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:gravity="center"
                        android:text="@{privateGroup.getLastCommentDate(context),default=刚刚}"
                        android:textColor="@color/thirty_eight_percent_black"
                        android:textSize="12dp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/last_comment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/new_comment_count_textview"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/fifty_four_percent_black"
                    android:textSize="14dp"
                    tools:text="[照片]" />

                <TextView
                    android:id="@+id/new_comment_count_textview"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/red_round_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/eighty_seven_percent_white"
                    android:textSize="12dp" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/user_icon_view"
            android:background="@color/divide_bg" />

    </RelativeLayout>

</layout>
