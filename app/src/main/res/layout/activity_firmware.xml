<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="toolbarViewModel"
            type="com.winsun.fruitmix.viewmodel.ToolbarViewModel" />

        <variable
            name="firmwareViewModel"
            type="com.winsun.fruitmix.firmware.FirmwareViewModel" />

        <variable
            name="noContentViewModel"
            type="com.winsun.fruitmix.viewmodel.NoContentViewModel" />

        <variable
            name="loadingViewModel"
            type="com.winsun.fruitmix.viewmodel.LoadingViewModel" />

        <variable
            name="firmwarePresenter"
            type="com.winsun.fruitmix.firmware.FirmwarePresenter" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.winsun.fruitmix.firmware.FirmwareActivity">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar_layout"
            app:toolbarViewModel="@{toolbarViewModel}" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/current_version_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/system_update"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:text="@{firmwareViewModel.currentFirmwareVersion}"
                        android:textColor="@color/eighty_seven_percent_black"
                        android:textSize="16dp"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="@+id/imageView2"
                        tools:text="当前的固件版本:1.0.6" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="@{firmwareViewModel.currentFirmwareState}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView3"
                        tools:text="运行中" />

                </android.support.constraint.ConstraintLayout>

                <Button
                    android:id="@+id/start_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="72dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/next_step_item_bg"
                    android:enabled="@{firmwareViewModel.enableStartStopBtn}"
                    android:onClick="@{()->firmwarePresenter.startOrStopOnClick(context)}"
                    android:text="@{firmwareViewModel.startStopBtnStr}"
                    android:textColor="@color/eighty_seven_percent_white"
                    android:textSize="14dp"
                    android:visibility="@{firmwareViewModel.showStartStopBtn?View.VISIBLE:View.GONE,default=gone}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/current_version_layout"
                    tools:text="停止" />

                <View
                    android:id="@+id/divide_one"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="72dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/divide_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/start_stop" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/new_version_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divide_one">

                    <ImageView
                        android:id="@+id/new_version_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:src="@{firmwareViewModel.newVersionIconResId,default=@drawable/new_releases}"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/find_new_version" />

                    <TextView
                        android:id="@+id/find_new_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:text="@{firmwareViewModel.findNewVersion}"
                        android:textColor="@color/eighty_seven_percent_black"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toTopOf="@id/release_date"
                        app:layout_constraintStart_toEndOf="@+id/new_version_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="发现新版本:1.1.11" />

                    <TextView
                        android:id="@+id/newVersionState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="@{firmwareViewModel.newVersionState}"
                        android:visibility="@{firmwareViewModel.showNewVersionState?View.VISIBLE:View.INVISIBLE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/find_new_version"
                        tools:text="已下载" />


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:text="@{firmwareViewModel.progress}"
                        android:visibility="@{firmwareViewModel.showProgress?View.VISIBLE:View.INVISIBLE}"
                        app:layout_constraintStart_toEndOf="@+id/find_new_version"
                        app:layout_constraintTop_toTopOf="@+id/newVersionState"
                        tools:text="35%" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:visibility="@{firmwareViewModel.showCheckUpdate?View.VISIBLE:View.INVISIBLE}"
                        app:layout_constraintStart_toEndOf="@+id/textView7"
                        app:layout_constraintTop_toTopOf="@+id/textView7" />

                    <TextView
                        android:id="@+id/release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{firmwareViewModel.releaseDate}"
                        android:textColor="@color/fifty_four_percent_black"
                        android:textSize="14dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/find_new_version"
                        app:layout_constraintTop_toBottomOf="@+id/find_new_version"
                        tools:text="发布日期：2017-12-27" />


                </android.support.constraint.ConstraintLayout>

                <Button
                    android:id="@+id/install_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="72dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/next_step_item_bg"
                    android:enabled="@{firmwareViewModel.enableInstallOrRetryBtn,default=false}"
                    android:onClick="@{()->firmwarePresenter.installOrRetryOnClick(context)}"
                    android:text="@{firmwareViewModel.installOrRetryBtn,default=@string/install}"
                    android:textColor="@color/eighty_seven_percent_white"
                    android:textSize="14dp"
                    android:visibility="@{firmwareViewModel.showInstallOrRetryBtn?View.VISIBLE:View.GONE,default=visible}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/new_version_layout"
                    tools:text="正在下载" />

                <View
                    android:id="@+id/divide_two"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="@{firmwareViewModel.showInstallOrRetryBtn?@dimen/eight:@dimen/zero,default=@dimen/eight}"
                    android:background="@color/divide_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/install_retry" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="72dp"
                    android:padding="8dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/next_step_item_bg"
                    android:onClick="@{()->firmwarePresenter.checkUpdate(context)}"
                    android:text="@string/check_update"
                    android:textColor="@color/eighty_seven_percent_white"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divide_two" />

            </android.support.constraint.ConstraintLayout>

            <include
                layout="@layout/new_no_content_layout"
                android:visibility="gone"
                app:noContentViewModel="@{noContentViewModel}" />

            <include
                layout="@layout/new_loading_layout"
                android:visibility="gone"
                app:loadingViewModel="@{loadingViewModel}" />

        </FrameLayout>


    </LinearLayout>


</layout>
