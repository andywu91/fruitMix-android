    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:elevation="8dp"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/bottom_navigation_item_bg"
        app:itemTextColor="@drawable/bottom_navigation_item_bg"
        app:menu="@menu/media_bottom_menu" />


    <LinearLayout
        android:id="@+id/btmenu"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="56dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bt_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/share_bt"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/bt_album"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/photo_album2"
            android:visibility="gone" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_add_white_24dp"
            android:visibility="visible"
            app:borderWidth="0dp"
            app:fabSize="normal" />

    </LinearLayout>


    <ImageView
        android:id="@+id/album_balloon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c8000000"
        android:src="@drawable/album_balloon"
        android:visibility="gone" />

</android.support.design.widget.CoordinatorLayout>

