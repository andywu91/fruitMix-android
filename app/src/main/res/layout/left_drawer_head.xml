<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/navigation_header_bg"
    android:fitsSystemWindows="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/share_portrait_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/user_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#DEFFFFFF"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/navigation_header_arrow_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/avatar"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/navigation_header_arrow_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.38"
            android:src="@drawable/navigation_header_arrow_down" />

    </LinearLayout>

    <TextView
        android:id="@+id/equipment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_textview"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@id/navigation_header_arrow_layout"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#8AFFFFFF"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/equipment_name"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/upload_percent_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:textColor="#8AFFFFFF"
            android:textSize="12dp" />

        <ProgressBar
            android:id="@+id/upload_percent_progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="64dp"
            android:layout_height="4dp"
            android:layout_marginRight="4dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/left_drawer_head_progressbar_bg" />

        <TextView
            android:id="@+id/upload_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8AFFFFFF"
            android:textSize="12dp" />

    </LinearLayout>


</RelativeLayout>