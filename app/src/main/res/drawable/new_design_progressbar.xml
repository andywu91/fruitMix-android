<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape android:shape="ring" android:useLevel="false"
        android:innerRadiusRatio="3"
        android:thicknessRatio="20">

        <gradient android:useLevel="false"
            android:type="sweep"
            android:centerY="0.5"
            android:startColor="@color/new_design_progressbar_color"
            android:centerColor="@color/new_design_progressbar_color"
            android:endColor="@color/new_design_progressbar_color"/>

    </shape>

</rotate>